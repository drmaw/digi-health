rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() { return request.auth != null; }
    function isOwner(userId) { return request.auth.uid == userId; }
    
    match /users/{userId} {
      allow read, list: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn(); // Allow doctors/staff to update red flags
      allow delete: if false;
    }

    match /organizations/{orgId} {
      allow read, list: if isSignedIn();
      allow write: if isSignedIn();
    }

    match /auditLogs/{logId} {
      allow read, list, create: if isSignedIn();
    }

    match /records/{recordId} {
      allow read, list: if isSignedIn() && (resource.data.patientId == request.auth.uid || request.auth.token.role == 'Doctor');
      allow create: if isSignedIn();
      allow delete: if isSignedIn() && resource.data.patientId == request.auth.uid;
    }

    match /appointments/{id} { allow read, write: if isSignedIn(); }
    match /schedules/{id} { allow read, write: if isSignedIn(); }
    match /investigations/{id} { allow read, write: if isSignedIn(); }
  }
}